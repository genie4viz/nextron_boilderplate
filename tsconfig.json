{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "jsx": "react",
    "lib": ["dom", "es2017"],
    "experimentalDecorators": true,
    "moduleResolution": "node",    
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "removeComments": false,
    "preserveConstEnums": true,
    "sourceMap": true,
    "noEmit": true,
  },
  "include": ["./"],
  "exclude": [
    "app",
    "nextron",
    "renderer/next.config.js",
  ],
}
